    <!--默认样式 注意* 样式只可修改，不能删除任何一项 否则报错-->
    <style name="picture.customer.style" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--标题栏背景色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏背景色-->
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <!--是否改变图片列表界面状态栏字体颜色为黑色-->
        <item name="picture.statusFontColor">false</item>
        <!--返回键图标 36x36-->
        <item name="picture.leftBack.icon">@mipmap/picture_back</item>
        <!--标题下拉箭头-->
        <item name="picture.arrow_down.icon">@mipmap/arrow_down</item>
        <!--标题上拉箭头-->
        <item name="picture.arrow_up.icon">@mipmap/arrow_up</item>
        <!--标题文字颜色-->
        <item name="picture.title.textColor">@color/black_dark</item>
        <!--标题栏右边文字-->
        <item name="picture.right.textColor">@color/black_dark</item>
        <!--图片列表勾选样式 36x36-->
        <item name="picture.checked.style">@drawable/picture_checkbox_selector</item>
        <!--开启图片列表勾选数字模式-->
        <item name="picture.style.checkNumMode">false</item>
        <!--选择图片样式0/9-->
        <item name="picture.style.numComplete">false</item>
        <!--图片列表底部背景色-->
        <item name="picture.bottom.bg">@color/background</item>
        <!--图片列表预览文字颜色-->
        <item name="picture.preview.textColor">@color/colorAccent</item>
        <!--图片列表已完成文字颜色-->
        <item name="picture.complete.textColor">@color/colorAccent</item>
        <!--图片已选数量圆点背景色-->
        <item name="picture.num.style">@drawable/blue_num_oval</item>
        <!--预览界面标题文字颜色-->
        <item name="picture.ac_preview.title.textColor">@color/black_dark</item>
        <!--预览界面已完成文字颜色-->
        <item name="picture.ac_preview.complete.textColor">@color/colorAccent</item>
        <!--预览界面标题栏背景色-->
        <item name="picture.ac_preview.title.bg">@color/white</item>
        <!--预览界面底部背景色-->
        <item name="picture.ac_preview.bottom.bg">@color/white</item>
        <!--预览界面状态栏颜色-->
        <item name="picture.status.color">@color/colorAccent</item>
        <!--预览界面返回箭头 36x36-->
        <item name="picture.preview.leftBack.icon">@mipmap/picture_back</item>
        <!--是否改变预览界面状态栏字体颜色为黑色-->
        <item name="picture.preview.statusFontColor">false</item>
        <!--裁剪页面标题背景色-->
        <item name="picture.crop.toolbar.bg">@color/colorAccent</item>
        <!--裁剪页面状态栏颜色-->
        <item name="picture.crop.status.color">@color/colorAccent</item>
        <!--裁剪页面标题文字颜色-->
        <item name="picture.crop.title.color">@color/white</item>
        <!--相册文件夹列表选中图标-->
        <item name="picture.folder_checked_dot">@drawable/blue_oval</item>
    </style>

