<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_marginTop="@dimen/margin_space"
            android:background="@color/divider" />

        <LinearLayout
            android:id="@+id/info_img_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/margin_space"
            android:paddingLeft="@dimen/margin_space"
            android:paddingRight="@dimen/margin_space"
            android:paddingTop="@dimen/margin_space">

            <TextView
                style="@style/Font14_black_dark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="头像" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/enterprise_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:src="@mipmap/not_1"
                app:riv_corner_radius="3dp" />

            <ImageView
                android:layout_width="@dimen/dimen_size_13"
                android:layout_height="@dimen/dimen_size_13"
                android:layout_marginLeft="@dimen/margin_space"
                android:src="@mipmap/icon_right" />

        </LinearLayout>

        <com.allen.library.SuperTextView
            android:id="@+id/info_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_46"
            app:sBottomLineMargin="10dp"
            app:sLeftTextColor="@color/black_dark"
            app:sLeftTextMarginLeft="@dimen/margin_space"
            app:sLeftTextString="姓名"
            app:sLineShow="both"
            app:sRightIconMarginRight="@dimen/margin_space"
            app:sRightIconRes="@mipmap/icon_right"
            app:sRightIconSize="13dp"
            app:sRightTextColor="@color/light"
            app:sRightTextMarginRight="30dp"
            app:sTopLineMargin="10dp" />

        <com.allen.library.SuperTextView
            android:id="@+id/info_sex"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_45.5"
            app:sBottomLineMargin="10dp"
            app:sLeftTextColor="@color/black_dark"
            app:sLeftTextMarginLeft="@dimen/margin_space"
            app:sLeftTextString="性别"
            app:sLineShow="bottom"
            app:sRightIconMarginRight="@dimen/margin_space"
            app:sRightIconRes="@mipmap/icon_right"
            app:sRightIconSize="13dp"
            app:sRightTextColor="@color/light"
            app:sRightTextMarginRight="30dp" />

        <com.allen.library.SuperTextView
            android:id="@+id/info_age"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_45.5"
            app:sBottomLineMargin="10dp"
            app:sLeftTextColor="@color/black_dark"
            app:sLeftTextMarginLeft="@dimen/margin_space"
            app:sLeftTextString="年龄"
            app:sLineShow="bottom"
            app:sRightIconMarginRight="@dimen/margin_space"
            app:sRightIconRes="@mipmap/icon_right"
            app:sRightIconSize="13dp"
            app:sRightTextColor="@color/light"
            app:sRightTextMarginRight="30dp" />

        <com.allen.library.SuperTextView
            android:id="@+id/info_job"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_45.5"
            app:sBottomLineMargin="0dp"
            app:sLeftTextColor="@color/black_dark"
            app:sLeftTextMarginLeft="@dimen/margin_space"
            app:sLeftTextString="职务"
            app:sLineShow="bottom"
            app:sRightIconMarginRight="@dimen/margin_space"
            app:sRightIconRes="@mipmap/icon_right"
            app:sRightIconSize="13dp"
            app:sRightTextColor="@color/light"
            app:sRightTextMarginRight="30dp" />

        <com.allen.library.SuperTextView
            android:id="@+id/info_interest"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_45.5"
            app:sBottomLineMargin="0dp"
            app:sLeftTextColor="@color/black_dark"
            app:sLeftTextMarginLeft="@dimen/margin_space"
            app:sLeftTextString="我的兴趣爱好"
            app:sLineShow="none"
            app:sRightIconMarginRight="@dimen/margin_space"
            app:sRightIconRes="@mipmap/icon_right"
            app:sRightIconSize="13dp"
            app:sRightTextColor="@color/light"
            app:sRightTextMarginRight="30dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/company_interestrange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:visibility="gone"
            android:paddingLeft="@dimen/margin_space" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#D8D8D8" />

        <com.allen.library.SuperTextView
            android:id="@+id/info_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_46"
            android:layout_marginTop="@dimen/margin_space"
            app:sBottomLineMargin="10dp"
            app:sLeftTextColor="@color/black_dark"
            app:sLeftTextMarginLeft="@dimen/margin_space"
            app:sLeftTextString="绑定手机号"
            app:sLineShow="both"
            app:sRightIconMarginRight="@dimen/margin_space"
            app:sRightIconRes="@mipmap/icon_right"
            app:sRightIconSize="13dp"
            app:sRightTextColor="@color/light"
            app:sRightTextMarginRight="30dp"
            app:sRightTextString="15136693786"
            app:sTopLineMargin="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_space"
            android:paddingRight="@dimen/margin_space">

            <TextView
                style="@style/Font14_black_dark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="是否公开显示手机号" />

            <com.suke.widget.SwitchButton
                android:id="@+id/info_switch"
                android:layout_width="55dp"
                android:layout_height="32dp"
                app:sb_checked="false"
                app:sb_checked_color="@color/colorAccent"
                app:sb_shadow_effect="true"
                app:sb_show_indicator="false" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/info_personal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.allen.library.SuperTextView
                    android:id="@+id/info_address"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_size_46"
                    android:layout_marginTop="@dimen/margin_space"
                    app:sBottomLineMargin="10dp"
                    app:sLeftTextColor="@color/black_dark"
                    app:sLeftTextMarginLeft="@dimen/margin_space"
                    app:sLeftTextString="地址"
                    app:sLineShow="both"
                    app:sRightIconMarginRight="@dimen/margin_space"
                    app:sRightIconRes="@mipmap/icon_right"
                    app:sRightIconSize="13dp"
                    app:sRightTextColor="@color/light"
                    app:sRightTextMarginRight="30dp"
                    app:sTopLineMargin="0dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/margin_space"
                    android:paddingRight="@dimen/margin_space">

                    <TextView
                        style="@style/Font14_black_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_space"
                        android:text="籍贯" />

                    <EditText
                        android:id="@+id/et_guan"
                        style="@style/Font14_black_dark"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="end|center_vertical"
                        android:hint="（可选填）"
                        android:maxLength="11"
                        android:maxLines="1" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:background="@color/divider" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:layout_marginTop="@dimen/margin_space"
                    android:background="@color/divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Font14_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_space"
                        android:text="我的兴趣爱好" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/info_hobby"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_height"
                        android:layout_marginLeft="@dimen/margin_space"
                        android:layout_marginRight="@dimen/margin_space"
                        android:background="@color/divider" />

                    <TextView
                        style="@style/Font14_black_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_space"
                        android:text="添加自定义标签" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/info_custom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/divider" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:layout_marginTop="@dimen/margin_space"
                android:background="@color/divider" />

            <TextView
                style="@style/Font14_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/margin_space"
                android:text="上传名片（可获得“实名认证”称号）" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/margin_space"
                android:paddingLeft="@dimen/margin_space"
                android:paddingRight="@dimen/margin_space">

                <ImageView
                    android:id="@+id/info_card"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:onClick="doClick"
                    android:src="@mipmap/uploade" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:layout_marginBottom="@dimen/margin_space"
                android:background="@color/divider" />

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>