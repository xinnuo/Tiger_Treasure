<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimen_size_15"
    android:paddingRight="@dimen/dimen_size_15">

    <ImageView
        android:id="@+id/item_notice_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_space"
        android:adjustViewBounds="true"
        android:src="@mipmap/not_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/margin_space">

        <TextView
            android:id="@+id/item_notice_title"
            style="@style/Font14_black_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="标题" />

        <TextView
            android:id="@+id/item_notice_content"
            style="@style/Font13_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_size_5"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/dimen_size_3"
            android:maxLines="2"
            android:text="内容" />

        <TextView
            android:id="@+id/item_notice_time"
            style="@style/Font13_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_size_5"
            android:text="2017-10-28" />

    </LinearLayout>

    <View
        android:id="@+id/item_notice_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_space"
        android:visibility="gone" />

</LinearLayout>