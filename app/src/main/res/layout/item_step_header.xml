<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_step_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_space"
        android:gravity="center">

        <View
            android:layout_width="50dp"
            android:layout_height="@dimen/divider_height"
            android:background="@color/black_dark" />

        <ImageView
            android:layout_width="2dp"
            android:layout_height="2dp"
            android:layout_marginLeft="2dp"
            android:src="@drawable/ova_black" />

        <TextView
            android:id="@+id/item_step_date"
            style="@style/Font14_black_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_size_5"
            android:layout_marginRight="@dimen/dimen_size_5"
            android:text="10月30日" />

        <ImageView
            android:layout_width="2dp"
            android:layout_height="2dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/ova_black" />

        <View
            android:layout_width="50dp"
            android:layout_height="@dimen/divider_height"
            android:background="@color/black_dark" />

    </LinearLayout>

    <TextView
        android:id="@+id/item_step_num"
        style="@style/Font13_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_40"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_space"
        android:text="查看过的企业（0）" />

</LinearLayout>

