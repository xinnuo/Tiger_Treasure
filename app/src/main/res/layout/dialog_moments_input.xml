<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/moments_hint"
            style="@style/Font13_black_dark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="@dimen/margin_space"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="@drawable/rec_bg_f0f0f0_stroke_e0e0e0"
            android:hint="请输入评论内容"
            android:minHeight="30dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:lineSpacingExtra="@dimen/rc_dimen_size_3"
            android:paddingTop="5dp" />

        <TextView
            android:id="@+id/moments_send"
            style="@style/Font14_black_dark"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_space"
            android:paddingRight="@dimen/margin_space"
            android:text="发送" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider" />

</LinearLayout>