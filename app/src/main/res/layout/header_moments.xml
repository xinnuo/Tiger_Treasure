<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <ImageView
        android:id="@+id/moments_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@mipmap/img_17"
        android:layout_marginBottom="@dimen/dimen_size_30"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/moments_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/default_user"
        android:layout_gravity="end|bottom"
        app:riv_corner_radius="@dimen/dimen_size_3"
        android:layout_marginBottom="@dimen/dimen_size_10"
        android:layout_marginRight="@dimen/dimen_size_20"/>

</FrameLayout>