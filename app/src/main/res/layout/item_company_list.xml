<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimen_size_15"
    android:paddingRight="@dimen/dimen_size_15">

    <LinearLayout
        android:id="@+id/item_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_space"
        android:background="@color/white"
        android:padding="@dimen/margin_space">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_company_img"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@mipmap/not_1"
            app:riv_corner_radius="@dimen/dimen_size_3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_space"
            android:layout_marginTop="@dimen/dimen_size_3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/item_company_name"
                    style="@style/Font14_black_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="公司名称" />

                <TextView
                    android:id="@+id/item_company_type"
                    style="@style/Font12_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_space"
                    android:background="@drawable/rec_bg_ova_white_stroke_orange"
                    android:paddingLeft="@dimen/dimen_size_8"
                    android:paddingRight="@dimen/dimen_size_8"
                    android:text="在营"
                    android:textColor="@color/orange" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/divider_height"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/item_company_watch"
                    style="@style/Font13_light"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="关注 0" />

                <TextView
                    android:id="@+id/item_company_edit"
                    style="@style/Font14_light"
                    android:layout_width="70dp"
                    android:layout_height="@dimen/dimen_size_30"
                    android:background="@drawable/rec_bg_ova_white_stroke_blue"
                    android:gravity="center"
                    android:text="编辑"
                    android:textColor="@color/colorAccent" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/item_manager_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_space"
        android:visibility="gone" />

</LinearLayout>