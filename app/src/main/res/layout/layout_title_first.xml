<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_title_first"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/colorAccent"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/first_city"
            style="@style/Font15_white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:drawablePadding="3dp"
            android:gravity="center_vertical"
            android:maxLength="4"
            android:onClick="doClick"
            android:text="城市" />

        <ImageView
            android:id="@+id/imv_city_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon_down" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/first_search"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="9dp"
        android:layout_marginTop="9dp"
        android:layout_weight="1"
        android:background="@drawable/rec_bg_078bcd_radius5"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="doClick">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="@dimen/dimen_size_10"
            android:layout_marginRight="@dimen/dimen_size_5"
            android:src="@mipmap/icon_search" />

        <TextView
            style="@style/Font13_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入关键字" />

    </LinearLayout>

    <ImageView
        android:id="@+id/first_msg"
        android:layout_width="@dimen/dimen_size_40"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_size_5"
        android:clickable="true"
        android:onClick="doClick"
        android:padding="@dimen/dimen_size_8"
        android:src="@mipmap/icon_message" />

</LinearLayout>