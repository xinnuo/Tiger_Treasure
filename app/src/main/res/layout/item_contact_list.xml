<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/dimen_size_8">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_contact_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/default_logo"
            app:riv_corner_radius="3dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_contact_name"
                style="@style/Font14_black_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_space"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="名称" />

            <TextView
                android:id="@+id/item_contact_cname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_space"
                android:layout_marginTop="3dp"
                android:drawablePadding="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/light"
                android:textSize="13sp"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_contact_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_space"
            android:layout_marginRight="20dp"
            android:text="距离6.0公里"
            android:textColor="@color/light"
            android:textSize="13sp"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/item_contact_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_size_20"
            android:clickable="false" />

    </LinearLayout>

    <View
        android:id="@+id/item_contact_divider1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginLeft="@dimen/margin_space"
        android:layout_marginRight="@dimen/margin_space"
        android:background="@color/divider" />

    <View
        android:id="@+id/item_contact_divider2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider"
        android:visibility="gone" />

</LinearLayout>