<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- Actionbar color Actionbar的背景色 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Status bar color 状态栏背景色 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- 各控制元件(如：check box、switch 或是 radiobutton) 被勾选 (checked) 或是选定 (selected) 的颜色 -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Window color App的背景色 -->
        <item name="android:colorBackground">@color/background</item>
        <!--App bar 上的标题与更多菜单中的文字颜色-->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- 各控制元件(如：check box、switch 或是 radiobutton) 默认状态的颜色 -->
        <item name="android:colorControlNormal">@color/colorControlNormal</item>
        <!-- 底部导航栏上的背景颜色 -->
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
        <!-- toolbar的主题-->
        <item name="toolbarStyle">@style/CustomToolbar</item>
    </style>

    <style name="AlertDialog" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomToolbar" parent="Widget.AppCompat.Toolbar">
        <!-- 设置该属性解决空白部分-->
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>

</resources>